{
  "_README": {
    "description": "Brand configurations for store locator scraping",
    "usage": "Select a brand, modify the URL if needed, and start scraping",
    "add_new_brand": "Copy a similar 'type' configuration and update the URL and field mappings"
  },

  "rolex_retailers": {
    "type": "json",
    "url": "https://retailers.rolex.com/app/establishments/by_viewport/light?brand=RLX&northEastLat=50.0&northEastLng=10.0&southWestLat=40.0&southWestLng=-10.0&langCode=en-us&establishmentType=STORE",
    "description": "Rolex Official Retailers API - Verified Working âœ…",
    "method": "GET",
    "data_path": "",
    "field_mapping": {
      "Name": ["name", "establishment_name"],
      "Address Line 1": ["address", "street"],
      "City": "city",
      "State/Province/Region": ["state", "province"],
      "Country": "country",
      "Postal/ZIP Code": ["zipCode", "postalCode", "zip"],
      "Phone": "phone",
      "Email": "email",
      "Website": "website",
      "Latitude": ["latitude", "lat"],
      "Longitude": ["longitude", "lng"]
    }
  },

  "custom_json_api": {
    "type": "json",
    "url": "https://api.yourbrand.com/stores",
    "description": "Template: Standard JSON API - Customize URL and field mapping",
    "method": "GET",
    "enabled": false,
    "data_path": "data.stores",
    "field_mapping": {
      "Name": ["name", "store_name", "title"],
      "Address Line 1": ["address", "address1", "street"],
      "Address Line 2": ["address2", "suite"],
      "City": ["city", "city_name"],
      "State/Province/Region": ["state", "province", "region"],
      "Country": ["country", "country_code"],
      "Postal/ZIP Code": ["zip", "postal_code", "zipcode"],
      "Phone": ["phone", "telephone"],
      "Email": ["email", "contact_email"],
      "Website": ["website", "url"],
      "Latitude": ["latitude", "lat"],
      "Longitude": ["longitude", "lng", "lon"]
    }
  },

  "shopify_store_locator": {
    "type": "json",
    "url": "https://yourstore.myshopify.com/apps/store-locator/locations.json",
    "description": "Template: Shopify Store Locator App - Common structure",
    "method": "GET",
    "enabled": false,
    "data_path": "locations",
    "field_mapping": {
      "Name": ["name", "title"],
      "Address Line 1": ["address", "address_1"],
      "Address Line 2": "address_2",
      "City": "city",
      "State/Province/Region": ["province", "state"],
      "Country": "country",
      "Postal/ZIP Code": ["zip", "postal_code"],
      "Phone": "phone",
      "Email": "email",
      "Latitude": ["lat", "latitude"],
      "Longitude": ["lng", "longitude"]
    }
  },

  "nested_json_deep": {
    "type": "json",
    "url": "https://api.yourbrand.com/v2/locations",
    "description": "Template: Deeply nested JSON - Uses dot notation for data_path",
    "method": "GET",
    "enabled": false,
    "data_path": "response.data.locations.items",
    "field_mapping": {
      "Name": "location.name",
      "Address Line 1": "location.address.street",
      "City": "location.address.city",
      "State/Province/Region": "location.address.state",
      "Country": "location.address.country",
      "Postal/ZIP Code": "location.address.postal_code",
      "Latitude": "location.coordinates.lat",
      "Longitude": "location.coordinates.lng"
    }
  },

  "html_bootstrap_cards": {
    "type": "html",
    "url": "https://yourwebsite.com/locations",
    "description": "Template: HTML page with store cards - Typical structure",
    "method": "GET",
    "enabled": false,
    "card_selector": ".store-card, .location-item, [data-store]",
    "selectors": {
      "Name": ".store-name, h3, h4",
      "Address Line 1": ".address, .street",
      "City": ".city",
      "State/Province/Region": ".state, .province",
      "Country": ".country",
      "Postal/ZIP Code": ".zip, .postal",
      "Phone": ".phone, a[href^='tel:']",
      "Email": ".email, a[href^='mailto:']",
      "Website": "a.website|href"
    },
    "data_attributes": {
      "Latitude": "data-lat",
      "Longitude": "data-lng",
      "Handle": "data-id"
    }
  },

  "wordpress_wp_store_locator": {
    "type": "html",
    "url": "https://yoursite.com/store-locator/",
    "description": "Template: WordPress WP Store Locator plugin",
    "method": "GET",
    "enabled": false,
    "card_selector": ".wpsl-store-location",
    "selectors": {
      "Name": ".wpsl-store-name",
      "Address Line 1": ".wpsl-street",
      "City": ".wpsl-city",
      "State/Province/Region": ".wpsl-state",
      "Postal/ZIP Code": ".wpsl-zip",
      "Country": ".wpsl-country",
      "Phone": ".wpsl-phone"
    },
    "data_attributes": {
      "Latitude": "data-lat",
      "Longitude": "data-lng"
    }
  },

  "google_maps_embedded": {
    "type": "html",
    "url": "https://yoursite.com/find-us",
    "description": "Template: Site with embedded Google Maps markers",
    "method": "GET",
    "enabled": false,
    "card_selector": ".map-marker, [data-marker]",
    "selectors": {
      "Name": ".marker-title, h3",
      "Address Line 1": ".marker-address",
      "Phone": ".marker-phone"
    },
    "data_attributes": {
      "Latitude": "data-lat",
      "Longitude": "data-lng",
      "Name": "data-title"
    }
  }
}
